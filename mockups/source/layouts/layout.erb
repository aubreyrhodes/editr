<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= "Editr" %></title>

    <%= stylesheet_link_tag "normalize", "bootstrap", "flat-ui.css", "main" %>
    <%= javascript_include_tag  "jquery-1.9.1.min", "modernizr-2.6.2-respond-1.1.0.min", "bootstrap" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
